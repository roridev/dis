{
  "schemaVersion": 1,
  "id": "$project",
  "version": "${version}",

  "name": "$project_name",
  "description": "$project_description",
  "authors": [
    "roridev"
  ],
  "contact": {
    "homepage": "$repo",
    "issues": "$repo/issues",
    "sources": "$repo"
  },

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "$group.$project.$entryPoint"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "$group.$project.$entryPointClient"
      }
    ],
    "server": [
      {
        "adapter": "kotlin",
        "value": "$group.$project.$entryPointServer"
      }
    ]
  },
  "mixins": [
	"${project}.mixins.json"
  ],
  "accessWidener": "${project}.accesswidener",
  "depends": {
    "fabricloader": ">=$loader",
    "fabric-language-kotlin": ">=$kotlin",
    "fabric": "*",
    "minecraft": "$minecraft"
  }
}